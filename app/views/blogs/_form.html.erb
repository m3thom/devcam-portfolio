<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, placeholder: "Title" %>
  </div>

   <div class="field">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                            {
                              selected: blog.topic.id,
                              include_blank: true
                            },
                            class: "form-control"
                            )  
    %>
    </div>

    <div class="field">
      <%= form.radio_button :status, 'draft'%>
      <%= form.label :status, 'Draft'%>
      <%= form.radio_button :status, 'published'%>
      <%= form.label :status, 'Published'%>
    </div>

  <div class="field">
    <%= form.text_area :body, placeholder: "Content" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
